<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.gallery.ui.profile.ProfileFragment"

    >
    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.example.gallery.ui.profile.ProfileViewModel" />
    </data>


        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="6dp">

            <Button
                android:id="@+id/btnAddFromDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Image from Phone"
                android:layout_marginBottom="6dp"
                android:onClick="@{()->viewModel.addImageFromDevice()}"

                />

            <Button
                android:id="@+id/btnAddFromCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnAddFromDevice"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="16dp"
                android:text="Add Image from Camera"

                android:onClick="@{()->viewModel.addImageFromCamera()}"
                />

            <EditText
                android:id="@+id/editTextImageUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Image URL"
                android:layout_below="@id/btnAddFromCamera"
                android:layout_marginTop="16dp"
                android:inputType="text"/>

            <Button
                android:id="@+id/btnAddFromLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Image from Link"
                android:layout_below="@id/editTextImageUrl"
                android:layout_marginTop="6dp"

                android:onClick="@{()->viewModel.addImageFromLink()}"
                />

            <Button
                android:id="@+id/btnBackup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Backup"
                android:layout_below="@id/btnAddFromLink"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"

                android:onClick="@{()->viewModel.backup()}"
                />

            <Button
                android:id="@+id/btnSyncToRemote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sync to Cloud Storage"
                android:layout_below="@id/btnBackup"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"

                android:onClick="@{()->viewModel.syncToCloudStorage()}"
                />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_below="@id/btnSyncToRemote"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"

                android:onClick="@{()->viewModel.logout()}"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your name: "
                android:textSize="20sp"
                android:layout_marginTop="6dp"
                android:id="@+id/txtName"
                android:layout_below="@id/btnLogout"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your userId:  "
                android:textSize="20sp"
                android:layout_marginTop="6dp"
                android:id="@+id/txtUserID"
                android:layout_below="@id/txtName"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Email:  "
                android:textSize="20sp"
                android:layout_marginTop="6dp"
                android:id="@+id/txtEmail"
                android:layout_below="@id/txtUserID"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number Images:  "
                android:textSize="20sp"
                android:layout_marginTop="6dp"
                android:id="@+id/txtNumImg"
                android:layout_below="@id/txtEmail"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number Albums:  "
                android:textSize="20sp"
                android:layout_marginTop="6dp"
                android:id="@+id/txtNumAlbum"
                android:layout_below="@id/txtNumImg"

                />




        </RelativeLayout>



</layout>