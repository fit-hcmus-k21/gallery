<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--    binding object of ViewModel to the XML layout-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btnMore"
            style="@style/Widget.App.Button.NoneOutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:icon="@drawable/baseline_more_horiz_24"
            android:layout_margin="10dp"
            bind:ignore="MissingConstraints"
            />
        <Button
            android:id="@+id/btnBack"
            style="@style/Widget.App.Button.NoneOutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:icon="@drawable/baseline_arrow_back_ios_24"
            android:layout_margin="10dp"
            bind:ignore="MissingConstraints"
            />
        <ListView
            android:id="@+id/list_Album"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/btnBack"
            app:layout_constraintBottom_toTopOf="@+id/btnGridView"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            bind:ignore="MissingConstraints"
            />
        <Button
            android:id="@+id/btnGridView"
            style="@style/Widget.App.Button.NoneOutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableTop="@drawable/baseline_grid_view_24"
            android:text="Grid"
            android:textSize="20dp"
            android:layout_margin="10dp"
            bind:ignore="MissingConstraints" />
        <Button
            android:id="@+id/btnDetailView"
            style="@style/Widget.App.Button.NoneOutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btnGridView"
            android:drawableTop="@drawable/baseline_text_snippet_24"
            android:text="Detail"
            android:textSize="20dp"
            android:layout_margin="10dp"
            bind:ignore="MissingConstraints"
            />

        <Button
            android:id="@+id/btnAddPicture"
            style="@style/Widget.App.Button.NoneOutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:icon="@drawable/baseline_add_24"
            android:textSize="20dp"
            android:layout_margin="10dp"
            bind:ignore="MissingConstraints"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

    <!--    android:onClick="@{()-> viewModel.onButtonClicked()}"-->